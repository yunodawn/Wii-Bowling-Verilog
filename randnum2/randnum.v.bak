module randnum(KEY, CLOCK_50, LEDR);
    input [0:0] KEY;
    output reg [2:0] LEDR;
    input CLOCK_50;
    
    reg [2:0] rand_target;
    
    always @(posedge CLOCK_50 or posedge KEY[0]) begin
        if(KEY[0]) begin
            rand_target <= 3'b011; 
        end
        else begin
            rand_target[0] <= rand_target[2];
            rand_target[1] <= rand_target[0];
            rand_target[2] <= rand_target[1] ^ rand_target[2];
        end
    end
    
    always @(*) begin
		  LEDR = (rand_target % 4) + 1'b1;
    end
    
endmodule
